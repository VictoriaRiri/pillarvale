# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================

# General
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# DATABASE
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fxplatform
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# JWT & SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# BLOCKCHAIN - BASE L2
# ============================================================================

# RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Deployer wallet
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Contract addresses (fill after deployment)
RATE_LOCK_CONTRACT_ADDRESS=
AAVE_POOL_CONTRACT_ADDRESS=
HEDGE_MANAGER_CONTRACT_ADDRESS=
CIRCUIT_BREAKER_CONTRACT_ADDRESS=
ORACLE_CONTRACT_ADDRESS=

# Basescan API key (for contract verification)
BASESCAN_API_KEY=your_basescan_api_key

# ============================================================================
# AAVE V3 (BASE)
# ============================================================================
AAVE_POOL_ADDRESS=0xA238Dd80C259a72e81d7e4664a9801593F98d1c5
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
AUSDC_ADDRESS=

# ============================================================================
# CHAINLINK ORACLE
# ============================================================================
CHAINLINK_RPC_URL=https://mainnet.base.org
CHAINLINK_KES_USD_FEED=

# ============================================================================
# BINANCE API
# ============================================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# ============================================================================
# XRP LEDGER
# ============================================================================
XRP_WALLET_SEED=your_xrp_wallet_seed
XRPL_SERVER=wss://s.altnet.rippletest.net:51233

# For mainnet:
# XRPL_SERVER=wss://xrplcluster.com

# ============================================================================
# M-PESA (SAFARICOM DARAJA API)
# ============================================================================
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_ENVIRONMENT=sandbox

# For production:
# MPESA_ENVIRONMENT=production

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourplatform.com
SENDGRID_FROM_NAME=FX Platform

# Africa's Talking (SMS)
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key
AFRICAS_TALKING_USERNAME=your_username

# ============================================================================
# ADMIN & MONITORING
# ============================================================================
ADMIN_EMAIL=admin@yourplatform.com
GRAFANA_PASSWORD=secure_grafana_password

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================

# Rate limits
MIN_USD_AMOUNT=10
MAX_USD_AMOUNT=50000
MAX_ACTIVE_LOCKS_PER_USER=10

# Spreads (KES per USD)
INSTANT_SPREAD=0.8
SEVEN_DAY_SPREAD=1.4
THIRTY_DAY_SPREAD=2.2

# Bank reference rate (for savings calculation)
BANK_RATE=131.0

# Reserve ratio (percentage of funds to keep liquid)
RESERVE_RATIO=10

# Volatility thresholds (basis points)
HIGH_VOLATILITY_THRESHOLD=200
EXTREME_VOLATILITY_THRESHOLD=500

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# KYC Provider (e.g., Jumio, Onfido)
KYC_PROVIDER_API_KEY=
KYC_PROVIDER_API_SECRET=

# Insurance provider
INSURANCE_API_KEY=

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
REPORT_GAS=false
DEBUG=false
